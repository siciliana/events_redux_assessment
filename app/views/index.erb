<div class="container">
  <form id="signin" action="/signin" method="post">
    <h2> Sign in </h2>
    <% if @error_signin %>
      <p class="error"><%= @error_signin %></p>
      <% end %>
      <input type="email" name="email" placeholder="Email" required><br>
      <input type="password" name="password" placeholder="Password" required><br>
      <br>
      <button type="submit">Sign in</button>
  </form>

  <h1> OR </h1>

  <form id="signup" action="/signup" method="post">
    <h2> Sign up </h2>
    <% if @error_signup %>
      <p class="error"><%= @error_signup %></p>
    <% end  %>
    <input type="text" name="user[first_name]" placeholder="First name" required><br>
    <input type="text" name="user[last_name]" placeholder="Last name" required><br>
    <input type="email" name="user[email]" placeholder="Email" required><br>
    <input type="password" name="user[password]" placeholder="Password" required><br>
    <br>
    <button type="submit">Sign up</button>
  </form>

</div>






