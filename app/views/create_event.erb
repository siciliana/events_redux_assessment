<div class="container">
  <form id="create-event" action="/events/create" method="post">
    <h2> Create Event </h2>

    <input type="text" name="event[name]" placeholder="Event name" required><br>
    <input type="text" name="event[location]" placeholder="Location" required><br>
    Start Date: <input type="date" name="event[starts_at]" required><br>
    End Date: <input type="date" name="event[ends_at]" required><br>
    <button type="submit">Create</button>
  </form>
</div>
